---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Devanagari Sangam MN";
    src: url("fonts/devangari-sangam-mn.ttf");
  }

  @font-face {
    font-family: "Computer Modern Typewriter Text Regular";
    src: url("fonts/cmu.typewriter-text-light.ttf");
  }

  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    --mobile-breakpoint: 1024px;
  }
  html {
    font-family: system-ui, sans-serif;
    background: white;
    background-size: 224px;
  }

  .noise-texture-text {
    background: url("images/noise.jpg") 0 0 / cover no-repeat;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
