---
import Layout from "../layouts/Layout.astro";
import Aside from "../components/Aside.astro";
import Main from "../components/Main.astro";
---

<Layout title="Personal portfolio">
  <div class="wrapper">
    <Aside />
    <Main />
  </div>
  <div class="spot one"></div>
  <div class="spot two"></div>
  <div class="spot three"></div>
</Layout>

<script>
  document.querySelectorAll(".spot").forEach((elem) => {
    elem.addEventListener("wheel", (e) => {
      e.preventDefault();
      e.stopPropagation();
    });
  });
</script>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    margin: 0;
    padding: 0;

    background-image: linear-gradient(
        rgba(246, 246, 246, 0.4) 0.1em,
        transparent 0.1em
      ),
      linear-gradient(90deg, rgba(246, 246, 246, 0.4) 0.1em, transparent 0.1em);
    background-size: 3em 3em;

    font-family:
      "Computer Modern Typewriter Text Regular",
      ui-sans-serif,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      "Helvetica Neue",
      Arial,
      "Noto Sans",
      sans-serif,
      "Apple Color Emoji",
      "Segoe UI Emoji",
      "Segoe UI Symbol",
      "Noto Color Emoji";
  }

  body.dark-mode {
    background-image: linear-gradient(
        rgba(26, 26, 26, 0.4) 0.1em,
        transparent 0.1em
      ),
      linear-gradient(90deg, rgba(26, 26, 26, 0.4) 0.1em, transparent 0.1em);
  }

  .spot.one {
    z-index: 2;
    scroll-behavior: none;
    position: absolute;
    width: 300px;
    height: 300px;
    background-color: rgb(205, 255, 39);
    top: 5rem;
    right: 5rem;
    border-radius: 50%;
    filter: blur(300px);
  }

  .spot.two {
    z-index: 2;

    scroll-behavior: none;
    position: absolute;
    width: 500px;
    height: 500px;
    background-color: rgb(156, 232, 246);
    bottom: 0;
    right: calc(50vh - 100px);
    border-radius: 50%;
    filter: blur(300px);
  }

  .spot.three {
    z-index: 2;

    scroll-behavior: none;
    position: absolute;
    width: 400px;
    height: 400px;
    background-color: rgb(248, 181, 255);
    top: -10rem;
    left: -10rem;
    border-radius: 50%;
    filter: blur(300px);
  }

  .wrapper {
    padding: 1rem;
    display: flex;
    height: 100vh;
    flex-direction: column;

    /* font-family:
      "Devanagari Sangam MN",
      ui-sans-serif,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      "Helvetica Neue",
      Arial,
      "Noto Sans",
      sans-serif,
      "Apple Color Emoji",
      "Segoe UI Emoji",
      "Segoe UI Symbol",
      "Noto Color Emoji"; */
  }

  /* desktop */
  @media (min-width: 1024px) {
    .wrapper {
      flex-direction: row;
    }
  }
</style>
