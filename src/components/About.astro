---
import { Image } from "astro:assets";
import Link from "./misc/Link.astro";
---

<section id="about">
  <h1 class="">
    <span class="noise-texture-text">[1].</span>
    <span class="noise-texture-text">About me</span>
    <!-- <span class="jp">// 私のこと</span> -->
  </h1>
  <div class="about-container">
    <div class="about-text">
      <div class="grid">
        <div>
          <span
            >Hello! I'm Ismael Gómez Reche - A Frontend developer based on
            Valencia, Spain
          </span>
        </div>
        <div style="display:flex;flex-direction:column">
          <span style="margin-top:auto"
            >Focused on building unique & creative websites</span
          >
        </div>
        <div>
          <Link link="/public/Ismael_Gomez_CV.pdf" name="Download my cv" />
        </div>
        <div class="image-container">
          <Image
            class="about-me-image"
            src="/images/me2.jpg"
            alt="me"
            width={75}
            height={75}
          />
          <span class="background-text"
            ><span>Avaliable for work</span> <div class="green-orb"></div></span
          >
        </div>
      </div>
    </div>
    <!-- <div>
      <Image
        class="about-me-image"
        src="/images/me.jpg"
        alt="me"
        width={100}
        height={100}
      />
    </div> -->
  </div>
</section>

<style>
  section {
    margin-bottom: 10rem;
  }

  .image-container {
    position: relative;
    z-index: 30;
  }

  h1 {
    border-bottom: 1px dashed #00000020;
    margin: 0;
    font-family:
      "Computer Modern Typewriter Text Regular",
      ui-sans-serif,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      "Helvetica Neue",
      Arial,
      "Noto Sans",
      sans-serif,
      "Apple Color Emoji",
      "Segoe UI Emoji",
      "Segoe UI Symbol",
      "Noto Color Emoji";
  }

  body.dark-mode h1 {
    border-bottom: 1px dashed #ffffff20;
  }

  h1 span {
    margin-right: 1.5rem;
  }

  h3 {
    margin-top: 0;
    text-align: right;
  }

  p {
    margin: 0;
  }

  .green-orb {
    min-width: 10px;
    width: 10px;
    height: 10px;
    display: block;
    background-color: rgb(87, 181, 87);
    border-radius: 50%;
    margin-bottom: 1px;
  }

  .background-text {
    display: inline-flex;
    width: calc(100% - 1rem - 2px);
    justify-content: space-around;
    align-items: center;
    text-align: left;
    background-color: #fff;
    font-weight: bold;
    border-radius: 0 0 0.3rem 0.3rem;
    padding: 0.2rem 0.5rem;
    border: 1px dashed #00000020;
    color: black;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(1, 1fr);
    grid-column-gap: 2rem;
    grid-row-gap: 2rem;
    width: 100%;
    height: 100%;
  }

  .grid div {
    text-align: justify;
  }

  .grid div:after {
    content: "";
    display: inline-block;
    width: 100%;
  }

  .grid div:nth-child(1) {
    grid-area: 1 / 1 / 2 / 2;
  }
  .grid div:nth-child(2) {
    grid-area: 1 / 2 / 2 / 3;
  }
  .grid div:nth-child(3) {
    grid-area: 1 / 3 / 2 / 4;
  }
  .grid div:nth-child(4) {
    grid-area: 1 / 4 / 2 / 5;
  }
  .grid div:nth-child(5) {
    grid-area: 2 / 1 / 3 / 2;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }
  .grid div:nth-child(6) {
    grid-area: 2 / 2 / 3 / 3;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }
  .grid div:nth-child(7) {
    grid-area: 2 / 3 / 3 / 4;
  }
  .grid div:nth-child(8) {
    grid-area: 2 / 4 / 3 / 5;
  }

  .about-container {
    display: flex;
    margin-bottom: 5rem;
    margin-top: 2rem;
    flex-direction: column;

    @media (min-width: 1024px) {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .about-text {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    max-width: 55rem;
  }

  /* .about-me-image {
    display: block;
    margin: 0 5rem;
    height: 15rem;
    width: auto;
    -webkit-filter: grayscale(50%);
    filter: grayscale(50%);
    border-top-left-radius: 1rem;
    border-bottom-right-radius: 1rem;
  } */

  .about-me-image {
    display: inline-block;
    float: right;
    width: 100%;
    height: auto;
    border-top-left-radius: 0.3rem;
    border-top-right-radius: 0.3rem;
  }

  .jp {
    float: right;
    opacity: 0.2;
    font-size: 1.1rem;
    margin: 0 !important;
  }

  .rounded-background {
    font-weight: bold;
    background-color: black;
    color: white;
    padding: 0.1rem 0.4rem;
    border-radius: 0.2rem;
  }
</style>
